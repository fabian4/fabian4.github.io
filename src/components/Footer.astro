---
import { USER_NAME, SITE_URL } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-content">
		&copy; 2022 - {today.getFullYear()} <a href={SITE_URL} target="_blank">{USER_NAME}</a>
		<span class="separator">|</span>
		<a href="https://creativecommons.org/licenses/by-nc/4.0/" target="_blank" rel="noopener noreferrer">CC BY-NC 4.0</a>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em;
		background: var(--background);
		color: var(--gray);
		text-align: center;
		font-size: 0.75rem; /* Smaller font size */
		border-top: 1px solid var(--border-color);
		margin-top: auto;
	}
	.footer-content {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 0.5em;
	}
	a {
		color: var(--gray-dark); /* Ensure links are dark gray by default */
		text-decoration: none;
	}
	a:hover {
		text-decoration: underline;
		color: var(--accent); /* Only accent on hover */
	}
	.separator {
		margin: 0 0.2em;
	}
</style>