---
import { USER_NAME, SITE_URL } from '../consts';
const today = new Date();
---

<footer class="mt-16 sm:mt-24 py-8 border-t border-border bg-background text-muted text-xs">
	<div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-center gap-2">
		<span>&copy; 2022 - {today.getFullYear()}</span>
		<a href={SITE_URL} target="_blank" class="text-foreground hover:text-primary transition-colors">{USER_NAME}</a>
		<span class="text-border mx-1">|</span>
		<a href="https://creativecommons.org/licenses/by-nc/4.0/" target="_blank" rel="noopener noreferrer" class="text-foreground hover:text-primary transition-colors">CC BY-NC 4.0</a>
	</div>
</footer>
